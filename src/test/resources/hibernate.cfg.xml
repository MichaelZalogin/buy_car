<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:./testdb;MODE=PostgreSQL;CASE_INSENSITIVE_IDENTIFIERS=TRUE;
        </property>
        <property name="hibernate.connection.username"></property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.pool_size">8</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.jdbc.time_zone">UTC</property>

        <mapping class="ru.buycar.entity.Body"/>
        <mapping class="ru.buycar.entity.Brand"/>
        <mapping class="ru.buycar.entity.Car"/>
        <mapping class="ru.buycar.entity.Color"/>
        <mapping class="ru.buycar.entity.DoorCount"/>
        <mapping class="ru.buycar.entity.Engine"/>
        <mapping class="ru.buycar.entity.File"/>
        <mapping class="ru.buycar.entity.FuelType"/>
        <mapping class="ru.buycar.entity.HistoryOwner"/>
        <mapping class="ru.buycar.entity.Model"/>
        <mapping class="ru.buycar.entity.Owner"/>
        <mapping class="ru.buycar.entity.Post"/>
        <mapping class="ru.buycar.entity.PriceHistory"/>
        <mapping class="ru.buycar.entity.Transmission"/>
        <mapping class="ru.buycar.entity.User"/>
        <mapping class="ru.buycar.entity.Years"/>

    </session-factory>
</hibernate-configuration>